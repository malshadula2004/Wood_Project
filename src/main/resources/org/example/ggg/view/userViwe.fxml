<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ggg.controller.userViweController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f4f4f4;">
    <children>
        <Label text="Users Management" layoutX="20.0" layoutY="20.0"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TableView fx:id="userTable" layoutX="20.0" layoutY="60.0" prefWidth="760.0" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="colUserName" text="Username" prefWidth="200.0" />
                <TableColumn fx:id="colPassword" text="Password" prefWidth="200.0" />
                <TableColumn fx:id="colJobRole" text="Role" prefWidth="200.0" />
            </columns>
        </TableView>

        <Button text="Delete Selected" layoutX="20.0" layoutY="500.0" prefWidth="150.0"
                onAction="#handleDeleteSelected"
                style="-fx-background-color: #f44336; -fx-text-fill: white;" />
    </children>
</AnchorPane>
