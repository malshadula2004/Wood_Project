               <Label prefWidth="100.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Employee ID:" />
               <ComboBox fx:id="cmbEmployeeId" prefWidth="200.0" style="-fx-font-size: 14px;" />
            </HBox>
            <HBox spacing="10.0">
               <Label prefWidth="100.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Date:" />
               <DatePicker fx:id="datePickerDate" prefWidth="200.0" style="-fx-font-size: 14px;" />
            </HBox>
            <HBox spacing="10.0">
               <Label prefWidth="100.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Status:" />
               <TextField fx:id="txtStatus" prefWidth="200.0" style="-fx-font-size: 14px;" />
            </HBox>
            <HBox spacing="10.0">
               <Label prefWidth="100.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Remarks:" />
               <TextField fx:id="txtRemarks" prefWidth="200.0" style="-fx-font-size: 14px;" />
            </HBox>
         </children>
      </VBox>

      <!-- TableView -->
      <TableView fx:id="tblAttendance" layoutX="109.0" layoutY="461.0" prefHeight="305.0" prefWidth="760.0" style="-fx-background-color: #ffffff; -fx-border-color: #dddddd; -fx-border-radius: 8; -fx-background-radius: 8;">
         <columns>
            <TableColumn fx:id="colAttendanceId" prefWidth="150.0" style="-fx-alignment: CENTER; -fx-font-size: 14px;" text="Attendance ID" />
            <TableColumn fx:id="colEmployeeId" prefWidth="150.0" style="-fx-alignment: CENTER; -fx-font-size: 14px;" text="Employee ID" />
            <TableColumn fx:id="colDate" prefWidth="150.0" style="-fx-alignment: CENTER; -fx-font-size: 14px;" text="Date" />
            <TableColumn fx:id="colStatus" prefWidth="150.0" style="-fx-alignment: CENTER; -fx-font-size: 14px;" text="Status" />
            <TableColumn fx:id="colRemarks" prefWidth="150.0" style="-fx-alignment: CENTER; -fx-font-size: 14px;" text="Remarks" />
         </columns>
      </TableView>

      <!-- Action Buttons -->
      <HBox layoutX="109.0" layoutY="412.0" spacing="20.0" />

      <Label layoutX="419.0" layoutY="28.0" text="Attendance" textFill="#7c1616">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <TextField fx:id="txtSearch" layoutX="109.0" layoutY="118.0" prefWidth="200.0" promptText="Search by Attendance ID or Employee ID" style="-fx-font-size: 14px;" />
      <Button fx:id="btnSearch" layoutX="341.0" layoutY="118.0" onAction="#SearchAttendance" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Search" />
      <TextField fx:id="txtAttendanceId" layoutX="676.0" layoutY="201.0" opacity="0.0" prefWidth="200.0" style="-fx-font-size: 14px;" />
      <Label layoutX="690.0" layoutY="137.0" opacity="0.0" prefWidth="100.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Attendance ID:" />
      <Button fx:id="btnReset" layoutX="690.0" layoutY="393.0" onAction="#resetAttendance" prefHeight="39.0" prefWidth="155.0" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Reset" />
      <Button fx:id="btnDelete" layoutX="497.0" layoutY="393.0" onAction="#DeleteToAttendance" prefHeight="39.0" prefWidth="155.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Delete" />
      <Button fx:id="btnUpdate" layoutX="304.0" layoutY="393.0" onAction="#UpdateToAttendance" prefHeight="39.0" prefWidth="155.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Update" />
      <Button fx:id="btnAdd" layoutX="109.0" layoutY="393.0" onAction="#AddToAttendance" prefHeight="39.0" prefWidth="155.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Add" />
      <ImageView fitHeight="30.0" fitWidth="39.0" layoutX="137.0" layoutY="399.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/add.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="326.0" layoutY="397.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/changes.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="522.0" layoutY="399.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/bin.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="710.0" layoutY="399.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/clean.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
