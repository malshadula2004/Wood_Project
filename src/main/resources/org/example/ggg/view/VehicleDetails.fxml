<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="VehicalPage" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ggg.controller.VehicleDetailsController">
   <children>
      <!-- Labels -->
      <Label layoutX="30.0" layoutY="30.0" text="Vehicle ID" />
      <Label layoutX="30.0" layoutY="80.0" text="Vehicle Number" />
      <Label layoutX="30.0" layoutY="130.0" text="Type" />
      <Label layoutX="30.0" layoutY="180.0" text="Capacity" />
      <Label layoutX="30.0" layoutY="230.0" text="Status" />
      <Label layoutX="30.0" layoutY="280.0" text="User ID" />

      <!-- TextFields -->
      <TextField fx:id="txtId" layoutX="150.0" layoutY="30.0" />
      <TextField fx:id="txtVehicalNumber" layoutX="150.0" layoutY="80.0" />
      <TextField fx:id="txtType" layoutX="150.0" layoutY="130.0" />
      <TextField fx:id="txtCapacity" layoutX="150.0" layoutY="180.0" />
      <TextField fx:id="txtStatus" layoutX="150.0" layoutY="230.0" />
      <TextField fx:id="txtUserId" layoutX="150.0" layoutY="280.0" />

      <!-- Buttons -->
      <Button fx:id="btnAdd" layoutX="400.0" layoutY="50.0" text="Add" onAction="#AddToVehical" />
      <Button fx:id="btnUpdate" layoutX="400.0" layoutY="100.0" text="Update" onAction="#UpdateToVehical" />
      <Button fx:id="btnDelete" layoutX="400.0" layoutY="150.0" text="Delete" onAction="#DeleteToVehical" />
      <Button fx:id="btnReset" layoutX="400.0" layoutY="200.0" text="Reset" onAction="#ResetToVehical" />

      <!-- TableView -->
      <TableView fx:id="tblVehical" layoutX="30.0" layoutY="350.0" prefHeight="200.0" prefWidth="740.0">
         <columns>
            <TableColumn fx:id="colVehicalId" prefWidth="120.0" text="Vehicle ID" />
            <TableColumn fx:id="colVehicalNumber" prefWidth="120.0" text="Vehicle Number" />
            <TableColumn fx:id="colType" prefWidth="120.0" text="Type" />
            <TableColumn fx:id="colCapacity" prefWidth="120.0" text="Capacity" />
            <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            <TableColumn fx:id="colUserId" prefWidth="120.0" text="User ID" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
